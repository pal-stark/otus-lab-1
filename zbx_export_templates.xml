<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2020-08-11T18:51:53Z</date>
    <groups>
        <group>
            <name>Templates</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>otus_important_metrics</template>
            <name>Otus important metrics</name>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
            </groups>
            <discovery_rules>
                <discovery_rule>
                    <name>otus_metrics_discovery</name>
                    <key>otus.discovery</key>
                    <item_prototypes>
                        <item_prototype>
                            <name>Otus important {#METRICNAME}</name>
                            <key>otus.metric[{#METRICNAME}]</key>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&gt;94</expression>
                                    <recovery_mode>RECOVERY_EXPRESSION</recovery_mode>
                                    <recovery_expression>{last()}&lt;95</recovery_expression>
                                    <name>Otus important {#METRICNAME} trigger</name>
                                    <opdata>Important {#METRICNAME} more then 94!</opdata>
                                    <priority>HIGH</priority>
                                    <manual_close>YES</manual_close>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                    <graph_prototypes>
                        <graph_prototype>
                            <name>Graph otus important {#METRICNAME}</name>
                            <yaxismax>110</yaxismax>
                            <ymin_type_1>FIXED</ymin_type_1>
                            <ymax_type_1>FIXED</ymax_type_1>
                            <graph_items>
                                <graph_item>
                                    <color>1A7C11</color>
                                    <item>
                                        <host>otus_important_metrics</host>
                                        <key>otus.metric[{#METRICNAME}]</key>
                                    </item>
                                </graph_item>
                            </graph_items>
                        </graph_prototype>
                    </graph_prototypes>
                </discovery_rule>
            </discovery_rules>
        </template>
    </templates>
</zabbix_export>
